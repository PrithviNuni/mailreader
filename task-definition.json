{
  "family": "mailreader-definition",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "mailreader-container",
      "image": "<IMAGE_URI>",
      "essential": true,
      "memory": 512,
      "cpu": 256,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080
        }
      ],
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "prod"
        }
      ]
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512",
  "tags": [
    {
      "key": "Name",
      "value": "mailreader-task"
    }
  ]
}
