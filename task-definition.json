{
  "family": "mailreader-definition",
  "networkMode": "bridge",
  "containerDefinitions": [
    {
      "name": "mailreader",
      "image": "<ACCOUNT_ID>.dkr.ecr.<REGION>.amazonaws.com/<REPOSITORY>:<TAG>",
      "essential": true,
      "memory": 512,
      "cpu": 256,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080
        }
      ],
      "environment": [
        {
          "name": JAVA_OPTIONS",
          "value": ""
        }
      ]
    }
  ],
  "cpu": "256",
  "memory": "512",
  "tags": [
    {
      "key": "Name",
      "value": "mailreader-definition"
    }
  ]
}
